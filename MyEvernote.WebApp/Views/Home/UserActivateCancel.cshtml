@using  MyEvernote.Entities.Messages
@model List<ErrorMessageObj>
@{
    ViewBag.Title = "Hesap Geçersiz";
}
<link href="~/Content/login-register.css" rel="stylesheet" />


<section class="login-info">
    <div class="container">
        <div class="row main">
            <div class="form-header">
                <h1 class="text-center ">Yönlendiriliyorsunuz...</h1>
            </div>
            <div class="main-content">

                <div class="text-danger">
                    <h2><span class="glyphicon glyphicon-remove"></span>&nbsp;&nbsp;&nbsp;Hesap geçerli değil..</h2>
                    <hr />
                    <p class="text-justify">
                        
                        @foreach (ErrorMessageObj error in Model)
                        {
                            @error.Message<br/>
                        }

                    </p>
                </div>


            </div>
        </div>
    </div>
</section>

<script>

    $(function () {

        $("footer").parent().hide();

        setTimeout(function () {
            window.location = "/home/index";
        }, 10000);

    });
</script>